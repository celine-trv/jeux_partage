{% extends "base.html.twig" %}


{% block title %}
    Détail du jeu 
{% endblock %}


{% block body %}

    <h1 class="h1 mt-3 mb-4">{{ game.name }}</h1>

		<div class="col-md-11 mx-auto py-3">
			<div class="row justify-content-between align-items-center">
				<div id="photo-detail" class="col-md-5 text-center">
					<img src="{{ asset('uploads/images/' ~ game.image)}}" alt="{{game.name}}">
				</div>
				<div class="col-md-7 p-3 d-flex flex-column justify-content-beetween align-items-center">
					<p class="card-text my-md-2 my-1"><span>Catégorie :</span> {{game.category.name}}</p>
					<p class="card-text my-md-2 my-1"><span>Age :</span> {{game.public}}</p>
					<p class="card-text my-md-2 my-1"><span>Nombre de joueurs :</span> {{game.minPlayers}} {% if game.maxPlayers != NULL and game.maxPlayers != game.minPlayers %} à {{game.maxPlayers}} {% endif %}</p>
					<p class="card-text my-md-2 my-1"><span>Ville de location :</span> {{game.owner.city}}</p>
					<p class="card-text"><span>Statut :</span> {% if borrowing == null %} <span class="text-success font-weight-bold" style="text-decoration: none;">Disponible</span> {% else %} <span class="text-danger font-weight-bold" style="text-decoration: none;">Indisponible</span></p> <p class="card-text">Le jeu sera disponible à partir du : <span class="font-weight-bold" style="text-decoration: none;"> {{ borrowing.endDate|date('d/m/Y')}} </span> {% endif %}</p>
				</div>
			</div>
			<p class="py-3 px-lg-4"><span style="text-decoration: underline;">Règle du jeu :</span> {{game.description|nl2br}}</p>
			<div class="d-flex justify-content-center align-items-center">
				<a href="{{ path('borrowing', {'id': game.id}) }}" class="btn btn-jp mb-2 {% if borrowing != null %}disabled{% endif %}">Emprunter</a>
			</div>
		</div>

{% endblock %}



